include-file = $HOME/.config/polybar/modules/modules.poly
include-file = $HOME/.config/polybar/modules/dwm.poly

[monitors]
left  = ${env:MONITOR:HDMI-0}
main  = ${env:MONITOR:DP-2}
right = ${env:MONITOR:DP-0}

[colors]
include-file = $HOME/.config/polybar/color-themes/whites.poly
include-file = $HOME/.config/polybar/basic-colors.poly
alert = ${colors.brgt-red}
warn = ${colors.brgt-yellow}

[module]
format-padding = 2
default-bg = ${colors.transparent}
default-fg = ${colors.nrml-white}

[bar/base]
; Values to inherit
monitor-strict = true
enable-ipc = true
offset-y = 1%
height = 40
radius = 0
fixed-center = true
background = ${module.default-bg}
foreground = ${colors.foreground-1}
line-size = 0
line-color = ${colors.foreground-1}
border-size = 1
padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 0
font-0 = Anonymice Nerd Font:size=13:antialias=true:autohint=true;1
override-redirect = false
cursor-click = pointer
cursor-scroll = ns-resize

[bar/main1]
inherit = bar/base
monitor = ${monitors.main}
width = 35%
offset-x = 0.5%
modules-left = menu dunst-script dunst-status script-updates script-mail alsa spotify-prev spotify-play-pause spotify-next spotify-git

[bar/main2]
inherit = bar/base
monitor = ${monitors.main}
width = 14%
offset-x = 43%
background = ${module.default-bg}
border-color = ${colors.transparent}
modules-center = dwm-tags

[bar/main3]
inherit = bar/base
monitor = ${monitors.main}
width = 35%
offset-x = 64.5%
modules-right = eth-up eth-down temperature cpu memory script-disk xkeyboard date-main
tray-position = right
tray-padding = 2
tray-background = ${colors.background-1}
    
[bar/right]
inherit = bar/base
monitor = ${monitors.left}
width = 98%
offset-x = 1%
modules-left = mem-bar 
modules-center = ${bar/main2.modules-center}
modules-right = date-secondary

[bar/left]
inherit = bar/base
monitor = ${monitors.right}
width = 98%
offset-x = 1%
modules-left = mem-bar 
modules-center = ${bar/main2.modules-center}
modules-right = date-secondary

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
pseudo-transparency = true

[global/wm]
margin-top = 5
margin-bottom = 5

