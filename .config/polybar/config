[module/menu]
type = custom/menu

expand-right = true

format-spacing = 1
format-background = ${colors.background-alt}
format-padding = 1

label-open = "  "
label-open-foreground = ${colors.c-11}
label-close =  Close
label-close-foreground = ${colors.c-11}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

;;; Main
menu-0-0 = power
menu-0-0-exec = menu-open-1
menu-0-1 = notifications
menu-0-1-exec = menu-open-4
menu-0-2 = picom
menu-0-2-exec = menu-open-5

;;; Power
menu-1-0 = reboot
menu-1-0-exec = menu-open-2
menu-1-1 = power off
menu-1-1-exec = menu-open-3

menu-2-0 = cancel
menu-2-0-exec = menu-open-0
menu-2-1 = reboot
menu-2-1-exec = sudo reboot

menu-3-0 = cancel
menu-3-0-exec = menu-open-0
menu-3-1 = power off
menu-3-1-exec = sudo poweroff

;;; Notifications
menu-4-0 = on
menu-4-0-exec = "dunstctl set-paused false; notify-send 'Notifications On' &"
menu-4-1 = off
menu-4-1-exec = "notify-send 'Notifications Off'; dunstctl set-paused true &"

;;; Picom
menu-5-0 = on
menu-5-0-exec = "picom && notify-send 'Picom On' &"
menu-5-1 = off
menu-5-1-exec = "if pgrep -x 'picom'; then killall picom; fi; notify-send 'Picom Off' &"

