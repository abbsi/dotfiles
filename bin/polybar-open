#!/bin/bash

echo "==> Launching PolyBar" | tee -a /tmp/polybar-main.log /tmp/polybar-left.log /tmp/polybar-right.log
rm -rf /tmp/polybar_mqueue.* && echo ">> Removed mqueue" | tee -a /tmp/polybar-main.log /tmp/polybar-left.log /tmp/polybar-right.log
killall -q polybar && echo ">> Killed All Bars" | tee -a /tmp/polybar-main.log /tmp/polybar-left.log /tmp/polybar-right.log
polybar --reload main >>/tmp/polybar-main.log 2>&1 & 
polybar --reload right >>/tmp/polybar-right.log 2>&1 &
polybar --reload left >>/tmp/polybar-left.log 2>&1 &

# Export path to Core 0 for temperature module
