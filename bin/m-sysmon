# Dmenu script for launching system monitoring programs.


declare -a options=("bashtop
bpytop
glances
gtop
gotop
htop
nmon\0color\x1fred
s-tui
ncdu
-- Root --
iftop
iotop
stacer
iptraf-ng-not-working
-- Browser --
homemon")

choice=$(echo -e "${options[@]}" | rofi -dmenu -g 2 -l 9 -i -p 'Óù† ')

case $choice in
	bashtop| \
	bpytop| \
	glances| \
	gtop| \
	gotop| \
	htop| \
	nmon| \
	s-tui)
        exec alacritty -e $choice
	;;
	ncdu)
	      exec alacritty -e ncdu --exclude={/mnt,/run/timeshift} /
	;;
	iftop| \
	iotop| \
	stacer| \
	iptraf-ng)
        sudo alacritty -e $choice
	;;
	homemon)
        exec homemon
	;;
	*)
		exit 1
	;;
esac

