#!/bin/bash
prog="Terminal
Code
FireFox
Thunderbird
Slack
Font-Manager
Discord
Whatsapp
pcmanfm
VNC
Pulse-Audio-Control
ALSA-Mixer
"

cmd=$(rofi -dmenu -g 2 -l 20 -p 'Open Application'   <<< "$prog")

case ${cmd%% *} in

  Terminal            )  exec alacritty;;
  FireFox             )  exec firefox;;
  Thunderbird         )  exec thunderbird;;
  Slack               )  exec slack;;
  Discord             )  exec discord;;
  Whatsapp            )  exec whatsapp-nativefier;;
  PCManFM             )  exec pcmanfm;;
  Font-Manager        )  exec font-manager;;
  Pinta               )  exec pinta;;
  VNC                 )  exec vncviewer;;
  Code                )  exec code;;
  Pulse-Audio-Control )  exec pavucontrol;;
  ALSA-Mixer          )  exec alacritty -e alsamixer -c 0;;
                     *)  exec "'${cmd}'";;
esac
